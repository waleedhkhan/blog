---
import Layout from "@/components/astro/layout/Layout.astro";
import Profile from "@/components/astro/modules/home/Profile.astro";
import Posts from "@/components/astro/modules/home/Posts.astro";
import RecentlyPlayed from "@/components/astro/modules/home/RecentlyPlayed.astro";
import RecentBookmarks from "@/components/astro/modules/home/RecentBookmarks.astro";
import { Icon } from "astro-icon/components";
import AppLink from "@/components/astro/ui/AppLink.astro";

const title = "Waleed | Building Impactful Digital Products";
const description =
  "Hi, I'm Waleed —a technology and business leader passionate about crafting impactful digital products and helping teams work smarter. Over the years, I've collaborated with industry giants like eBay, PayPal, and Adobe to create scalable solutions that drive meaningful change.";
---

<Layout title={title} description={description}>
  <section class=":uno: grid grid-cols-12 gap-4 bauhaus-stack-lg">
    <Profile />

    <div class="col-start-1 col-end-13 md:col-start-5 space-y-4 leading-[1.75] bauhaus-content">
      <p class="text-gray-800 dark:text-gray-400">
        hi there! i'm waleed – welcome to my personal website! i'm a software engineer based in the vibrant city of berlin, with over a decade of experience designing and operating large-scale e-commerce systems.
      </p>

    <p class="text-gray-800 dark:text-gray-400">
        i'm passionate about creating simple, functional, and beautifully designed applications. i love diving into the latest innovations in tech, where i have a deep appreciation for high-quality, practical products that combine utility with sleek aesthetics.
       <p class="text-gray-800 dark:text-gray-400">thanks for stopping by feel free to explore and connect!

      </p>
      </p>
    </div>
  </section>

  <section class=":uno: grid grid-cols-12 gap-4 bauhaus-stack-lg">
    <h2
      class=":uno: col-start-1 col-end-13 md:col-start-1 md:col-end-5 font-normal text-lg tracking-tight text-gray-900 dark:text-gray-300 transition-colors bauhaus-title"
    >
      recent posts   
    </h2>

    <div class="col-start-1 col-end-13 md:col-start-5 md:col-end-13 space-y-4 leading-[1.75]">
      <Posts />

      <div class=":uno: flex justify-end">
        <AppLink
          class=":uno: mt-8 inline-flex items-center justify-center w-auto h-auto px-3 py-2 rounded-sm bauhaus-button transition-all duration-200 group relative text-sm"
          href="/posts"
          aria-label="See all posts"
        >
          <span class=":uno: font-normal bauhaus-mono lowercase">all posts</span>
          <Icon name="lucide:arrow-right" class=":uno: w-4 h-4 ml-1 text-gray-700 dark:text-gray-400" />
        </AppLink>
      </div>
    </div>
  </section>

  <section class=":uno: grid grid-cols-12 gap-4 bauhaus-stack-lg">
    <h2
      class=":uno: col-start-1 col-end-13 md:col-start-1 md:col-end-5 font-normal text-lg tracking-tight text-gray-900 dark:text-gray-300 transition-colors bauhaus-title"
    >
      bookmarks
    </h2>

    <div class="col-start-1 col-end-13 md:col-start-5 md:col-end-13 space-y-4 leading-[1.75]">
      <!-- Desktop view (visible on md screens and up) -->
      <div class=":uno: hidden md:block">
        <RecentBookmarks />
      </div>
      
      <!-- Mobile/Tablet view (hidden on md screens and up) -->
      <div class=":uno: block md:hidden">
        <RecentBookmarks />
      </div>
    </div>
  </section>

  <section class=":uno: grid grid-cols-12 gap-4 bauhaus-stack-lg">
    <h2
      class=":uno: col-start-1 col-end-13 md:col-start-1 md:col-end-5 font-normal text-lg tracking-tight text-gray-900 dark:text-gray-300 transition-colors bauhaus-title"
    >
      music
    </h2>

    <div class="col-start-1 col-end-13 md:col-start-5 md:col-end-13 space-y-4 leading-[1.75]">
      <RecentlyPlayed />
    </div>
  </section>

</Layout>
