---
import Layout from "@/components/astro/layout/Layout.astro";
import bookmarksData from "@/data/bookmarks.json";

const title = "Bookmarks â€” Waleed";
const description = "A collection of useful links and resources";
---

<Layout title={title} description={description}>
  <section class=":uno: space-y-8">
    <div class=":uno: space-y-4">
      <h1 class=":uno: font-semibold text-2xl tracking-tight text-heading">Bookmarks</h1>
      <p class=":uno: text-lg leading-[1.75]">{description}</p>
    </div>

    <div class=":uno: relative">
      <table class=":uno: w-full text-left text-sm">
        <thead>
          <tr class=":uno: border-b border-gray-200 dark:border-gray-800">
            <th class=":uno: px-4 py-3 font-normal text-gray-500 dark:text-gray-400">Name</th>
            <th class=":uno: px-4 py-3 font-normal text-gray-500 dark:text-gray-400">Category</th>
          </tr>
        </thead>
        <tbody>
          {bookmarksData.bookmarks.map((bookmark) => (
            <tr class=":uno: border-b border-gray-100 dark:border-gray-800/50">
              <td class=":uno: px-4 py-3 text-gray-900 dark:text-gray-100">
                <a
                  href={bookmark.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class=":uno: text-blue-600 hover:underline dark:text-blue-400"
                  title={bookmark.url}
                >
                  {bookmark.name}
                </a>
              </td>
              <td class=":uno: px-4 py-3 text-gray-600 dark:text-gray-400">{bookmark.category}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>
</Layout>
