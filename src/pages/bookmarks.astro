---
import Layout from "@/components/astro/layout/Layout.astro";
import bookmarksData from "@/data/bookmarks.json";

const title = "Bookmarks â€” Waleed";
const description = "A collection of useful links and resources";

function shortenUrl(url: string) {
  try {
    const urlObj = new URL(url);
    return `${urlObj.hostname}${urlObj.pathname === '/' ? '' : '...'}`;
  } catch {
    return url;
  }
}
---

<Layout title={title} description={description}>
  <section class=":uno: space-y-8">
    <div class=":uno: space-y-4">
      <h1 class=":uno: font-semibold text-2xl tracking-tight text-heading">Bookmarks</h1>
      <p class=":uno: text-lg leading-[1.75]">{description}</p>
    </div>

    <div class=":uno: relative">
      <table class=":uno: w-full text-left text-sm border border-gray-100 dark:border-gray-800">
        <thead class=":uno: text-xs text-gray-500 dark:text-gray-400">
          <tr>
            <th class=":uno: px-4 py-2">Name</th>
            <th class=":uno: px-4 py-2">Category</th>
            <th class=":uno: px-4 py-2">URL</th>
          </tr>
        </thead>
        <tbody class=":uno: divide-y divide-gray-100/50 dark:divide-gray-800/50">
          {bookmarksData.bookmarks.map((bookmark) => (
            <tr class=":uno: transition-colors hover:bg-gray-50/30 dark:hover:bg-gray-800/30">
              <td class=":uno: px-4 py-3 font-medium text-gray-900 dark:text-gray-100">{bookmark.name}</td>
              <td class=":uno: px-4 py-3 text-gray-600 dark:text-gray-400">{bookmark.category}</td>
              <td class=":uno: px-4 py-3">
                <a
                  href={bookmark.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class=":uno: text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
                  title={bookmark.url}
                >
                  {shortenUrl(bookmark.url)}
                </a>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>
</Layout>
