<style is:global>
  /* Optimize font loading */
  @font-face {
    font-family: 'Inter';
    font-display: swap;
    src: url('/fonts/inter.woff2') format('woff2');
  }

  @font-face {
    font-family: 'JetBrains Mono';
    font-display: swap;
    src: url('/fonts/jetbrains-mono.woff2') format('woff2');
  }

  body {
    font-family: 'Inter', sans-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'JetBrains Mono', monospace;
  }
</style>
