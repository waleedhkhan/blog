].sort((a, b) => a.name.localeCompare(b.name));
---

<ul class=":uno: grid grid-cols-2 md:grid-cols-3 gap-x-4 gap-y-2">
  {
    customers.map((customer, index) => (
      <li class="fancy-list-item">
        <AppLink
          href={customer.link}
          class={`:uno: py-1.5 px-2 -ml-2 rounded-md text-sm tracking-normal inline-flex items-center text-text/90 hover:text-heading transition-all duration-300 ${colors[index % colors.length]} customer-button`}
        >
          <span class="relative truncate">{customer.name}</span>
        </AppLink>
      </li>
    ))
  }
</ul>

<style>
  .fancy-list-item {
    position: relative;
    padding-left: 0.8rem;
    width: 100%; /* Ensure full width in grid cell */
  }

  .fancy-list-item::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: currentColor;
    opacity: 0.3;
    transform: translateY(-50%);
    transition: all 0.3s ease;
  }

  .fancy-list-item:hover::before {
    opacity: 0.6;
    transform: translateY(-50%) scale(1.2);
  }

  .customer-button {
    animation: subtle-float 14s ease-in-out infinite;
    animation-delay: calc(var(--delay) * 3s);
  }

  .customer-button:nth-child(3n + 1) { --delay: 0; }
  .customer-button:nth-child(3n + 2) { --delay: 2; }
  .customer-button:nth-child(3n + 3) { --delay: 4; }

  @keyframes subtle-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-1px); }
  }

  .customer-button:hover {
    animation: none;
    transform: translateY(-1px);
  }
</style>
