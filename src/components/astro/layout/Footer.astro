---
import AppLink from "@/components/astro/ui/AppLink.astro";
import Logo from "@/components/astro/ui/Logo.astro";
import LiveTime from "@/components/astro/ui/LiveTime.astro";
import VisitorCounter from "@/components/astro/ui/VisitorCounter.astro";

const contacts = [
  {
    label: "Mail",
    href: "mailto:hello@waleed.de",
  },
  {
    label: "GitHub",
    href: "https://github.com/waleedhkhan",
  },
  {
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/waleedhk/",
  },
  {
    label: "Bluesky",
    href: "https://bsky.app/profile/waleedcodes.bsky.social",
  },
];
---

<footer class=":uno: w-full mx-auto text-sm py-8 md:pb-[43px] pb-24 px-8">
  <div
    class="flex md:flex-col items-center space-x-4 lg:space-x-0 md:space-y-4"
  >
    <Logo class="w-8 h-[36px]" />


    <div class=":uno: flex items-center space-x-4">
      {
        contacts.map((link) => {
          return (
            <AppLink
              href={link.href}
              title={link.label}
              class=":uno: flex items-center space-x-2 hover:text-heading focus:text-heading transition-colors font-medium text-heading/85"
              rel="me"
            >
              {link.label}
            </AppLink>
          );
        })
      }
      <VisitorCounter />
    </div>

  <div class="flex items-center justify-between mt-4 md:mt-[43px]">
    <p>
      Every day is a new chance. <br>
      Made with üî• in Berlin üêª

    </p>
    
    <div class="flex flex-col items-end">
      <div class="flex space-x-4">
        <AppLink
          href="/rss.xml"
          class="font-medium text-heading/85 transition-colors hover:text-heading focus:text-heading"
        >
          RSS
        </AppLink>

        <AppLink
          href="/colophon"
          class="font-medium text-heading/85 transition-colors hover:text-heading focus:text-content"
        >
          Colophon
        </AppLink>
      </div>
      <LiveTime />
    </div>
  </div>
</footer>

