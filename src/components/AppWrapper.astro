import ErrorBoundary from './ErrorBoundary.vue';

const isDev = import.meta.env.DEV;
const { children } = Astro.props;

const fallbackMessage = 'Something went wrong. Please refresh the page or try again later.';
--->

<ErrorBoundary client:load fallback={fallbackMessage}>
  <slot />
  
  {isDev && (
    <div class="fixed bottom-4 right-4 bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-100 px-4 py-2 rounded-lg shadow-lg text-sm">
      Development Mode
    </div>
  )}
</ErrorBoundary>

<style>
  /* Global styles can go here */
  :root {
    --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
  }
  
  html {
    scroll-behavior: smooth;
    font-family: var(--font-sans);
  }
  
  /* Smooth scrolling for anchor links */
  html {
    scroll-padding-top: 6rem;
  }
  
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
